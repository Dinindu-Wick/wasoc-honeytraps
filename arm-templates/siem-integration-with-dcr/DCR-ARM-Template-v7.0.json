{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dataCollectionRuleName": {
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the Data Collection Rule to create. (Ensure no special characters or numbers are used)."
            }
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "string",
            "metadata": {
                "description": "Specifies the location in which to create the Data Collection Rule."
            }
        },
        "workspaceResourceId": {
            "type": "string",
            "metadata": {
                "description": "The Log Analytics workspace Resource ID noted in the Log Analytics workspace properties. (Not Workspace ID)"
            }
        },
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Specify the workspaceName where the table will be created"
            }
        },
        "tableName": {
            "defaultValue": "Canary",
            "allowedValues": ["Canary"],
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the table, without adding _CL"
            }
          } 
    },
    "variables": {
    "customTableName": "[concat(parameters('tableName'), '_CL')]",
    "streamName": "[concat('Custom-', parameters('tableName'))]",
    "outputStreamName": "[concat('Custom-', parameters('tableName'), '_CL')]"
    },
    "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/tables",
      "apiVersion": "2025-02-01",
      "name": "[concat(parameters('workspaceName'), '/', variables('customTableName'))]",
      "tags": {
                "Author": "WASOC",
                "Version": "2.0.0",
                "Project": "HoneyTraps"
            },
      "properties": {
        "schema": {
          "name": "[variables('customTableName')]",
          "displayName": "[variables('customTableName')]",
          "description": "Custom canary and canary token tables from HoneyTraps project",
          "columns": [
                {
                    "name": "TimeGenerated",
                    "type": "datetime",
                    "description": "The time at which the data was generated in Sentinel"
                },
                {
                    "name": "Description",
                    "type": "string"
                },
                {
                    "name": "Timestamp",
                    "type": "string",
                    "description": "The timestamp from Canary platform"
                },
                {
                    "name": "Reminder",
                    "type": "string"
                },
                {
                    "name": "Token",
                    "type": "string"
                },
                {
                    "name": "Flock",
                    "type": "string"
                },
                {
                    "name": "SourceIP",
                    "type": "string"
                },
                {
                    "name": "IncidentHash",
                    "type": "string"
                },
                {
                    "name": "Intro",
                    "type": "string"
                },
                {
                    "name": "AdditionalDetails",
                    "type": "string"
                },
                {
                    "name": "AlertType",
                    "type": "string"
                },
                {
                    "name": "Triggered",
                    "type": "int"
                },
                {
                    "name": "TimestampGlobalTZ",
                    "type": "string",
                    "description": "The timestamp from Canary platform"
                },
                {
                    "name": "LogType",
                    "type": "int"
                },
                {
                    "name": "IncidentKey",
                    "type": "string"
                },
                {
                    "name": "MatchedAnnotations",
                    "type": "string"
                },
                {
                    "name": "CanaryName",
                    "type": "string"
                },
                {
                    "name": "CanaryID",
                    "type": "string"
                },
                {
                    "name": "CanaryIP",
                    "type": "string"
                },
                {
                    "name": "CanaryPublicIP",
                    "type": "string"
                },
                {
                    "name": "CanaryLocation",
                    "type": "string"
                },
                {
                    "name": "ReverseDNS",
                    "type": "string"
                },
                {
                    "name": "CanaryPort",
                    "type": "int"
                }
              ]
        },
        "plan": "Analytics",
        "retentionInDays": "-1"
        }
        },
        {
            "type": "Microsoft.Insights/dataCollectionRules",
            "name": "[parameters('dataCollectionRuleName')]",
            "location": "[parameters('location')]",
            "apiVersion": "2023-03-11",
            "kind": "Direct",
            "tags": {
                "Author": "WASOC",
                "Version": "2.0.0",
                "Project": "HoneyTraps"
            },
            "properties": {
                "streamDeclarations": {
                    "[variables('streamName')]": {
                        "columns": [
                {
                    "name": "TimeGenerated",
                    "type": "datetime",
                    "description": "The time at which the data was generated in Sentinel"
                },
                {
                    "name": "Description",
                    "type": "string"
                },
                {
                    "name": "Timestamp",
                    "type": "string",
                    "description": "The timestamp from Canary platform"
                },
                {
                    "name": "Reminder",
                    "type": "string"
                },
                {
                    "name": "Token",
                    "type": "string"
                },
                {
                    "name": "Flock",
                    "type": "string"
                },
                {
                    "name": "SourceIP",
                    "type": "string"
                },
                {
                    "name": "IncidentHash",
                    "type": "string"
                },
                {
                    "name": "Intro",
                    "type": "string"
                },
                {
                    "name": "AdditionalDetails",
                    "type": "string"
                },
                {
                    "name": "AlertType",
                    "type": "string"
                },
                {
                    "name": "Triggered",
                    "type": "int"
                },
                {
                    "name": "TimestampGlobalTZ",
                    "type": "string",
                    "description": "The timestamp from Canary platform"
                },
                {
                    "name": "LogType",
                    "type": "int"
                },
                {
                    "name": "IncidentKey",
                    "type": "string"
                },
                {
                    "name": "MatchedAnnotations",
                    "type": "string"
                },
                {
                    "name": "CanaryName",
                    "type": "string"
                },
                {
                    "name": "CanaryID",
                    "type": "string"
                },
                {
                    "name": "CanaryIP",
                    "type": "string"
                },
                {
                    "name": "CanaryPublicIP",
                    "type": "string"
                },
                {
                    "name": "CanaryLocation",
                    "type": "string"
                },
                {
                    "name": "ReverseDNS",
                    "type": "string"
                },
                {
                    "name": "CanaryPort",
                    "type": "int"
                }
                        ]
                    }
                },
                "destinations": {
                    "logAnalytics": [
                        {
                            "workspaceResourceId": "[parameters('workspaceResourceId')]",
                            "name": "logAnalyticsWorkspace"
                        }
                    ]
                },
                "dataFlows": [
                    {
                        "streams": [
                            "[variables('streamName')]"
                        ],
                        "destinations": [
                            "logAnalyticsWorkspace"
                        ],
                        "transformKql": "source\n | extend TimeGenerated = now() \n",
                        "outputStream": "[variables('outputStreamName')]"
                    }
                ],
                "dependsOn": ["[concat('Microsoft.OperationalInsights/workspaces/tables/', parameters('workspaceName'), '/', variables('customTableName'))]"]
            }
        }
    ],
    "outputs": {
        "dataCollectionRuleId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Insights/dataCollectionRules', parameters('dataCollectionRuleName'))]"
        }
    }
}